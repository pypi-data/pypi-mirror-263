#!/bin/bash

set -euo pipefail

echo ---- ruff format ----
ruff format --check .
echo

echo ---- ruff lint ----
ruff check .
echo

echo ---- pytest ----
pytest
echo

echo ---- stubtest ----
stubtest htpy
echo

echo ---- mypy ----
mypy
echo

echo ---- pyright ----
pyright
echo

echo ==== SUCCESS ====
